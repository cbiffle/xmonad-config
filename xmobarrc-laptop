               , Run Battery
                  [ "-S", "True"  -- suffixes
                  , "-t", "<acstatus> <watts> <timeleft>"
                  , "-L", "10"
                  , "-H", "80"
                  , "-h", "green"
                  , "-l", "red"
                  , "--"
                  , "-O", "<fc=green>AC</fc>"
                  , "-i", "<fc=#808080>AC</fc>"
                  , "-o", ""
                  ] 20
               , Run BatteryN ["BAT0"]
                  [ "-t", "<leftvbar>"
                  , "-L", "10"
                  , "-H", "80"
                  , "-h", "green"
                  , "-l", "red"
