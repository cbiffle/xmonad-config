               , Run UnsafeStdinReader ]
  , template = "%UnsafeStdinReader% }{<action=`xterm -e top`>%multicpu% %thermal1% %memory%</action> | <action=`xterm -e 'sudo wifi-menu'`>%wlp2s0wi%</action> | %battery% %bat0% | <fc=#FF0000>%theDate%</fc>"
  }
